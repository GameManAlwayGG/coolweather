<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.coolweather.xiaoranas">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:name="org.litepal.LitePalApplication"
        android:allowBackup="true"
        android:icon="@drawable/weather"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.coolweather.xiaoranas.activity.DataListActivity">

        </activity>
        <activity android:name="com.coolweather.xiaoranas.activity.WeatherActivity"/>
        <activity android:name="com.coolweather.xiaoranas.activity.SettingActivity"/>
        <activity android:name="com.coolweather.xiaoranas.activity.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service android:name="com.coolweather.xiaoranas.service.AutoUpdataService"
            android:enabled="true"
            android:exported="true"/>
    </application>

</manifest>