<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/newselector">

    <ImageView
        android:id="@+id/item_infomation_top_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="8dp"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/item_infomation_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/item_infomation_top_image"
        android:layout_weight="2"
        android:layout_alignParentLeft="true"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        android:text="这是一个标题！看起来很长很长很长的标题"
        android:textSize="20sp"
        android:maxLines="2"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="5dp"
        android:layout_alignBottom="@+id/item_infomation_top_image">
        <TextView
            android:id="@+id/item_infomation_source"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="来源"
            android:textSize="14sp"/>
        <View
            android:layout_width="1dp"
            android:layout_height="10dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:background="@color/view"/>
        <TextView
            android:id="@+id/item_infomation_edit_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="发布时间"
            android:textSize="14sp"
            android:layout_marginRight="5dp"/>
    </LinearLayout>




</RelativeLayout>