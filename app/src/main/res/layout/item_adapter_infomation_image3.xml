<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/newselector">

    <TextView
        android:id="@+id/item_infomation_image3_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:text="这是一个标题！看起来很长很长很长的标题"
        android:textSize="20sp"
        android:maxLines="2"/>
    <LinearLayout
        android:id="@+id/item_infomation_image3_linearlayout"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/item_infomation_image3_title"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/item_infomation_image3_01"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="8dp"
            android:background="@mipmap/ic_launcher"/>
        <ImageView
            android:id="@+id/item_infomation_image3_02"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="8dp"
            android:background="@mipmap/ic_launcher"/>
        <ImageView
            android:id="@+id/item_infomation_image3_03"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="8dp"
            android:background="@mipmap/ic_launcher"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="15dp"
        android:layout_below="@+id/item_infomation_image3_linearlayout">
        <TextView
            android:id="@+id/item_infomation_image3_source"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="来源"
            android:textSize="14sp"/>
        <View
            android:layout_width="1dp"
            android:layout_height="10dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:background="@color/view"/>
        <TextView
            android:id="@+id/item_infomation_image3_edit_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="发布时间"
            android:textSize="14sp"
            android:layout_marginRight="5dp"/>
    </LinearLayout>




</RelativeLayout>